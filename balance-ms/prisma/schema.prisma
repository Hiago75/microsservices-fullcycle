datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Account {
  id        String   @id @default(uuid())
  accountId String   @map("account_id") @unique
  balance    Decimal
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("balances")
  @@index([accountId])
}